{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build",
        "//#infra:start"
      ]
    },
    "//#infra:start": {
      "cache": false
    },
    "//#infra:stop": {
      "cache": false
    },
    "//#infra:destroy": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "check": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "dependsOn": [
        "build",
        "^lint"
      ],
      "outputs": [
        "dist"
      ]
    },
    "lint:autofix": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "format:check": {},
    "format:write": {}
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}